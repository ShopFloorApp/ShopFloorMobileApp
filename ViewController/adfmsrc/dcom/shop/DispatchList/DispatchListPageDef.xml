<?xml version="1.0" encoding="UTF-8" ?>
<pageDefinition xmlns="http://xmlns.oracle.com/adfm/uimodel" version="12.1.3.2.36" id="DispatchListPageDef"
                Package="dcom.shop.DispatchList">
  <parameters/>
  <executables>
    <variableIterator id="variables">
      <variable Name="find_searchValue" Type="java.lang.String"/>
    </variableIterator>
    <iterator Binds="root" RangeSize="25" DataControl="DepartmentDC" id="DepartmentDCIterator"/>
    <accessorIterator MasterBinding="DepartmentDCIterator" Binds="departments" RangeSize="25" DataControl="DepartmentDC"
                      BeanClass="dcom.shop.application.mobile.DepartmentBO" id="departmentsIterator"/>
  </executables>
  <bindings>
    <methodAction id="gotoSpringboard" RequiresUpdateModel="true" Action="invokeMethod" MethodName="gotoSpringboard"
                  IsViewObjectMethod="false" DataControl="ApplicationFeatures"
                  InstanceName="data.ApplicationFeatures.dataProvider"/>
    <tree IterBinding="departmentsIterator" id="departments">
      <nodeDefinition DefName="dcom.shop.application.mobile.DepartmentBO" Name="departments0">
        <AttrNames>
          <Item Value="deptName"/>
          <Item Value="deptDesc"/>
          <Item Value="deptId"/>
          <Item Value="openJob"/>
          <Item Value="orgCode"/>
        </AttrNames>
      </nodeDefinition>
    </tree>
    <action IterBinding="departmentsIterator" id="setCurrentRowWithKey"
            InstanceName="dcom.shop.application.dc.DepartmentDC.departments" DataControl="DepartmentDC"
            RequiresUpdateModel="false" Action="setCurrentRowWithKey">
      <NamedData NDName="rowKey" NDValue="#{pageFlowScope.rowKey}" NDType="java.lang.String"/>
    </action>
    <attributeValues IterBinding="variables" id="searchValue">
      <AttrNames>
        <Item Value="find_searchValue"/>
      </AttrNames>
    </attributeValues>
    <methodAction id="findDepartments" RequiresUpdateModel="true" Action="invokeMethod" MethodName="findDepartments"
                  IsViewObjectMethod="false" DataControl="DepartmentDC" InstanceName="data.DepartmentDC.dataProvider">
      <NamedData NDName="dept" NDValue="#{bindings.find_searchValue}" NDType="java.lang.String"/>
    </methodAction>
  </bindings>
</pageDefinition>
