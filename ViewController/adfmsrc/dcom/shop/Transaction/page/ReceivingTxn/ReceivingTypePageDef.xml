<?xml version="1.0" encoding="UTF-8" ?>
<pageDefinition xmlns="http://xmlns.oracle.com/adfm/uimodel" version="12.1.3.13.52" id="ReceivingTypePageDef"
                Package="dcom.shop.Transaction.page.ReceivingTxn">
  <parameters/>
  <executables>
    <variableIterator id="variables">
      <variable Name="carrierVar" Type="java.lang.String"/>
    </variableIterator>
    <iterator Binds="root" RangeSize="25" DataControl="ReceivingTxnDC" id="ReceivingTxnDCIterator"/>
    <accessorIterator MasterBinding="ReceivingTxnDCIterator" Binds="purchaseOrder" RangeSize="25"
                      DataControl="ReceivingTxnDC"
                      BeanClass="dcom.shop.application.mobile.transaction.receiving.PurchaseOrderBO"
                      id="purchaseOrderIterator"/>
    <accessorIterator MasterBinding="ReceivingTxnDCIterator" Binds="requisition" RangeSize="25"
                      DataControl="ReceivingTxnDC"
                      BeanClass="dcom.shop.application.mobile.transaction.receiving.RequisitionBO"
                      id="requisitionIterator"/>
    <accessorIterator MasterBinding="ReceivingTxnDCIterator" Binds="salesOrder" RangeSize="25"
                      DataControl="ReceivingTxnDC"
                      BeanClass="dcom.shop.application.mobile.transaction.receiving.SalesOrderBO"
                      id="salesOrderIterator"/>
    <accessorIterator MasterBinding="ReceivingTxnDCIterator" Binds="carriers" RangeSize="-1"
                      DataControl="ReceivingTxnDC" BeanClass="dcom.shop.application.mobile.CarrierBO"
                      id="carriersIterator"/>
    <accessorIterator MasterBinding="ReceivingTxnDCIterator" Binds="lines" RangeSize="25" DataControl="ReceivingTxnDC"
                      BeanClass="dcom.shop.application.mobile.transaction.receiving.LinesBO" id="linesIterator"/>
  </executables>
  <bindings>
    <list IterBinding="purchaseOrderIterator" ListOperMode="navigation" ListIter="purchaseOrderIterator"
          id="purchaseOrder" DTSupportsMRU="true" SelectItemValueMode="ListObject">
      <AttrNames>
        <Item Value="poNumber"/>
      </AttrNames>
    </list>
    <list IterBinding="requisitionIterator" ListOperMode="navigation" ListIter="requisitionIterator" id="requisition"
          DTSupportsMRU="true" SelectItemValueMode="ListObject">
      <AttrNames>
        <Item Value="reqNumber"/>
      </AttrNames>
    </list>
    <list IterBinding="salesOrderIterator" ListOperMode="navigation" ListIter="salesOrderIterator" id="salesOrder"
          DTSupportsMRU="true" SelectItemValueMode="ListObject">
      <AttrNames>
        <Item Value="orderNumber"/>
      </AttrNames>
    </list>
    <tree IterBinding="linesIterator" id="lines">
      <nodeDefinition DefName="dcom.shop.application.mobile.transaction.receiving.LinesBO" Name="lines0">
        <AttrNames>
          <Item Value="lines"/>
          <Item Value="subInv"/>
          <Item Value="isNewEntity"/>
          <Item Value="locator"/>
          <Item Value="lpn"/>
          <Item Value="quantity"/>
          <Item Value="uom"/>
          <Item Value="rowIdx"/>
        </AttrNames>
      </nodeDefinition>
    </tree>
    <methodAction id="refreshLines" RequiresUpdateModel="true" Action="invokeMethod" MethodName="refreshLines"
                  IsViewObjectMethod="false" DataControl="ReceivingTxnDC"
                  InstanceName="data.ReceivingTxnDC.dataProvider"/>
    <methodAction id="processReceive" RequiresUpdateModel="true" Action="invokeMethod" MethodName="processReceive"
                  IsViewObjectMethod="false" DataControl="ReceivingTxnDC"
                  InstanceName="data.ReceivingTxnDC.dataProvider">
      <NamedData NDName="actionType" NDValue="#{pageFlowScope.actionType}" NDType="java.lang.String"/>
    </methodAction>
    <list IterBinding="variables" id="carrierName" DTSupportsMRU="true" SelectItemValueMode="ListObject"
          StaticList="false" ListIter="carriersIterator"
          NullValueId="${adfBundle['oracle.javatools.resourcebundle.SystemBundle']['NULL_VALUE_RESID']}"
          NullValueFlag="start">
      <AttrNames>
        <Item Value="carrierVar"/>
      </AttrNames>
      <ListAttrNames>
        <Item Value="carrierName"/>
      </ListAttrNames>
      <ListDisplayAttrNames>
        <Item Value="carrierName"/>
      </ListDisplayAttrNames>
    </list>
  </bindings>
</pageDefinition>
