                                                 id="spl2"/>
                        <amx:setPropertyListener from="false" to="#{pageFlowScope.RangeOff}" id="spl4"/>
                        <amx:setPropertyListener from="TransactComponents" to="#{pageFlowScope.ParentPage}" id="spl9"/>
                        <amx:tableLayout id="tl2">
                            <?audit suppress oracle.maf.warning-missing-shortDesc?>
                            <amx:rowLayout id="rl2">
                                <amx:cellFormat id="cf3">
                                    <?audit suppress oracle.maf.warning-missing-shortDesc?>
                                    <amx:outputText id="ot5" inlineStyle="font-weight:bold;color:#34AADC;"
                                                    value="Serial Entry"/>
                                </amx:cellFormat>
                            </amx:rowLayout>
                        </amx:tableLayout>
                    </amx:commandLink>
                </amx:cellFormat>
                <amx:cellFormat id="cf4" halign="end">
                    <amx:commandLink id="cl3" action="LotEntry"
                                     disabled='#{pageFlowScope.lotControl eq "1" ? false : true}'>
                        <?audit suppress oracle.maf.warning-missing-shortDesc?>
                        <amx:setPropertyListener from="#{pageFlowScope.quantity}" to="#{pageFlowScope.LotQty}"
                                                 id="spl5"/>
                        <amx:setPropertyListener from="#{pageFlowScope.searchKeyword}" to="#{pageFlowScope.LotItem}"
                                                 id="spl6"/>
                        <amx:setPropertyListener from="TransactComponents" to="#{pageFlowScope.ParentPage}" id="spl10"/>
                        <amx:tableLayout id="tl3">
                            <amx:rowLayout id="rl3">
                                <amx:cellFormat id="cf5">
                                    <amx:outputText id="ot6" inlineStyle="font-weight:bold;color:#34AADC;"
                                                    value="Lot Entry"/>
                                </amx:cellFormat>
                            </amx:rowLayout>
                        </amx:tableLayout>
                    </amx:commandLink>
                </amx:cellFormat>
            </amx:rowLayout>
        </amx:tableLayout>
    </amx:panelPage>
    <amx:popup id="p1">
        <amx:tableLayout id="tl1">
            <amx:rowLayout id="rl1">
                <amx:cellFormat id="cf1">
                    <amx:outputText value="#{pageFlowScope.serviceResponse}" id="ot3"/>
