        </amx:panelFormLayout>
        <amx:tableLayout id="tl4" width="100%" inlineStyle="margin-left:40px;margin-right:40px;">
            <amx:rowLayout id="rl4">
                <amx:cellFormat id="cf2">
                    <amx:commandLink id="cl4" inlineStyle="float:left;margin:0px;padding:0px;" action="SerialEntry"
                                     disabled='#{pageFlowScope.serialControl eq "1" ? false : true}'>
                        <amx:setPropertyListener from="#{bindings.trxQty.inputValue}" to="#{pageFlowScope.SerialQty}"
